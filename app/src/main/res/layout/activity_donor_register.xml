<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#E0E5EC">


    <androidx.cardview.widget.CardView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="60dp"
        app:cardElevation="8dp"
        android:background="@drawable/soft_ui_background">

        <ImageView
            android:id="@+id/userPhoto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/app_name"
            />
    </androidx.cardview.widget.CardView>

    <EditText
        android:id="@+id/nameField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:background="@drawable/soft_ui_edit_text"
        android:hint="Name"
        android:inputType="textPersonName"
        android:padding="12dp"/>

    <!-- Add similar styling for other EditText fields -->

    <EditText
        android:id="@+id/phoneNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:background="@drawable/soft_ui_edit_text"
        android:hint="Phone Number"
        android:inputType="phone"
        android:padding="12dp"/>

    <EditText
        android:id="@+id/address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:background="@drawable/soft_ui_edit_text"
        android:hint="Address"
        android:inputType="text"
        android:padding="12dp"/>
    <EditText
        android:id="@+id/facebook"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:background="@drawable/soft_ui_edit_text"
        android:hint="Facebook Profile Link"
        android:inputType="text"
        android:padding="12dp"/>
    <EditText
        android:id="@+id/date_of_birth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:background="@drawable/soft_ui_edit_text"
        android:hint="Date of Birth"
        android:inputType="date"
        android:padding="12dp"/>
    <EditText
        android:id="@+id/last_date_of_donation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:background="@drawable/soft_ui_edit_text"
        android:hint="Last Date of Donation"
        android:inputType="date"
        android:padding="12dp"/>

    <EditText
        android:id="@+id/total_donated"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:background="@drawable/soft_ui_edit_text"
        android:hint="Total Donated"
        android:inputType="phone"
        android:padding="12dp"/>

    <Spinner
        android:id="@+id/bloodGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:background="@drawable/soft_ui_edit_text"
        android:padding="12dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/registerButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:background="@drawable/soft_ui_edit_text"
        android:text="Register as Donor"
        android:textColor="#5D6874"
        android:padding="12dp"/>

</LinearLayout>